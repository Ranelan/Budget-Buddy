/* Updated Color Variables for Light Blue & White Theme */
:root {
  --bg-main: white;
  --bg-secondary: white;
  --bg-card: white;
  --text-main: #2c3e50;
  --text-secondary: #718096;
  --text-muted: #a0aec0;
  --accent-primary: #4299e1;
  --accent-secondary: #38b2ac;
  --accent-light: #bee3f8;
  --warm-accent: #ed8936;
  --success: #48bb78;
  --danger: #f56565;
  --border: #e2e8f0;
  --shadow: rgba(0, 0, 0, 0.1);
  --shadow-lg: rgba(0, 0, 0, 0.15);
  --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-hero: linear-gradient(135deg, #4299e1 0%, #38b2ac 100%);
  --btn-bg: white;
  --btn-text: var(--text-main);
  --btn-outline: rgba(255, 255, 255, 0.9);
}

/* Reset and Base Styles */
body, html {
  background: var(--bg-main);
  color: var(--text-main);
  font-family: 'Inter', 'Segoe UI', 'Roboto', Arial, sans-serif;
  margin: 0;
  padding: 0;
  transition: all 0.3s ease;
}

/* Navigation Styles */
.main-nav {
  background: white;
  box-shadow: 0 2px 12px var(--shadow);
  padding: 0.8em 0;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
  min-height: 70px;
}

.nav-logo {
  display: flex;
  align-items: center;
  position: absolute;
  left: 22%;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.nav-links-right {
  display: flex;
  align-items: center;
  gap: 2em;
  list-style: none;
  margin: 0;
  padding: 0;
  position: absolute;
  right: 22%;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.nav-links-right li a {
  color: var(--text-main);
  font-weight: 600;
  text-decoration: none;
  font-size: 1.1em;
  padding: 0.5em 1em;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.nav-links-right li a:hover,
.nav-links-right li a.active {
  background: var(--accent-light);
  color: var(--accent-primary);
}

/* Logo Styles */
.logo-text-link {
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 0.5em;
}

.logo-text {
  font-size: 1.8rem;
  font-weight: 900;
  color: #4299e1;
  letter-spacing: 0.5px;
  font-family: 'Inter', sans-serif;
}

.logo-text-highlight {
  color: #26c6da;
  margin-left: 0.2em;
}

/* Hero Section */
.hero-bg {
  background: var(--gradient-hero);
  padding: 0;
  margin: 0;
}

.align-with-header {
  display: grid;
  grid-template-columns: 1fr minmax(420px, 480px) 1fr;
  align-items: start;
  margin-top: 2.5em;
  min-height: 400px;
  padding: 4em 2em;
}

.align-with-header .hero-content {
  grid-column: 2;
  min-width: 420px;
  max-width: 480px;
}

.align-with-header .hero-image {
  grid-column: 3;
  margin-left: 2em;
}

.hero-title {
  font-size: 3em;
  font-weight: 900;
  color: white;
  margin-bottom: 0.3em;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.hero-highlight {
  color: var(--accent-light);
}

.hero-subtitle {
  font-size: 1.3em;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 1.5em;
  line-height: 1.6;
}

.hero-features {
  margin: 2em 0;
  padding-left: 0;
  color: rgba(255, 255, 255, 0.95);
  font-size: 1.1em;
  line-height: 2;
  list-style: none;
}

.hero-features li {
  margin-bottom: 0.8em;
  padding-left: 2em;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.8em;
  position: relative;
}

.hero-features li::before {
  content: "âœ“";
  position: absolute;
  left: 0;
  color: var(--accent-light);
  font-weight: bold;
  font-size: 1.2em;
}

.hero-cta-row {
  display: flex;
  gap: 1.5em;
  margin-top: 2em;
}

.hero-btn {
  font-size: 1.1em;
  font-weight: 700;
  border-radius: 12px;
  padding: 1em 2.5em;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
}

.hero-btn-gold {
  background: white;
  color: var(--accent-primary);
  box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
}

.hero-btn-gold:hover {
  background: var(--accent-light);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 255, 255, 0.4);
}

.hero-btn-outline {
  background: transparent;
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.8);
}

.hero-btn-outline:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: white;
}

.hero-image {
  font-size: 4em;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  width: 120px;
  height: 120px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Login Landing Page */
.login-landing-bg {
  min-height: 100vh;
  background: var(--gradient-hero);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-landing-container {
  background: var(--bg-secondary);
  border-radius: 20px;
  box-shadow: 0 10px 40px var(--shadow-lg);
  padding: 3em 2.5em 2.5em 2.5em;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 380px;
  max-width: 400px;
  border: 1px solid var(--border);
}

.login-landing-logo {
  margin-bottom: 1.5em;
}

.login-landing-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 0.7em;
  margin-bottom: 1.2em;
}

.login-label {
  color: var(--accent-primary);
  font-size: 1em;
  font-weight: 700;
  margin-bottom: 0.2em;
}

.login-input {
  background: var(--bg-main);
  border: 2px solid var(--border);
  color: var(--text-main);
  font-size: 1.1em;
  padding: 1em;
  margin-bottom: 1em;
  outline: none;
  border-radius: 12px;
  transition: all 0.2s ease;
  width: 100%;
}

.login-input:focus {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px var(--accent-light);
}

.login-btn {
  margin-top: 1em;
  background: var(--gradient-primary);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 1.1em;
  font-weight: 700;
  padding: 1em 0;
  cursor: pointer;
  transition: all 0.2s ease;
  width: 100%;
}

.login-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px var(--shadow-lg);
}

.login-dropdown-container {
  width: 100%;
  margin-top: 1.2em;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-dropdown {
  width: 100%;
  padding: 1em;
  border-radius: 12px;
  border: 2px solid var(--border);
  background: var(--bg-main);
  color: var(--text-main);
  font-size: 1em;
  font-weight: 600;
  margin-top: 1em;
  outline: none;
  transition: all 0.2s ease;
}

.login-dropdown:focus {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px var(--accent-light);
}
.align-with-header {
  display: grid;
  grid-template-columns: 1fr minmax(420px, 480px) 1fr;
  align-items: start;
  margin-top: 2.5em;
  min-height: 400px;
}

.align-with-header .hero-content {
  grid-column: 2;
  min-width: 420px;
  max-width: 480px;
}

.align-with-header .hero-image {
  grid-column: 3;
  margin-left: 2em;
}

@media (max-width: 900px) {
  .align-with-header {
    grid-template-columns: 1fr;
    margin-left: 0;
    margin-right: 0;
    justify-items: center;
  }
  .align-with-header .hero-content, .align-with-header .hero-image {
    grid-column: 1;
    margin-left: 0;
  }
}

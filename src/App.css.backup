/* --- Goal Management Page Styles --- */
.goal-page {
  background: white;
  border-radius: 24px;
  box-shadow: 0 8px 32px rgba(33,150,243,0.13);
  padding: 2em 3em;
  max-width: 700px;
  margin: 2em auto;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.goal-page h1 {
  color: var(--accent-secondary);
  font-size: 2em;
  font-weight: 800;
  margin-bottom: 1em;
  text-align: center;
}

.goal-form {
  background: #232a36;
  border-radius: 18px;
  box-shadow: 0 2px 12px rgba(33, 150, 243, 0.10);
  padding: 1.5em 2em;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.2em;
  align-items: center;
  width: 100%;
  max-width: 480px;
  margin: 0 auto 2em auto;
}

.goal-form input {
  background: white;
  color: var(--text-main);
  border: 1.5px solid #dee2e6;
  border-radius: 12px;
  padding: 1em;
  font-size: 1em;
  outline: none;
  transition: border 0.2s, box-shadow 0.2s;
}
.goal-form input:focus {
  border-color: #ffd700;
  box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.15);
}
.goal-form button {
  grid-column: span 2;
  margin-top: 0.5em;
  padding: 1em 0;
  border-radius: 12px;
  font-size: 1em;
  font-weight: 700;
  border: none;
  cursor: pointer;
  background: linear-gradient(90deg, #2196f3 0%, #21cbf3 100%);
  color: #fff;
  transition: background 0.2s, color 0.2s;
}
.goal-form button:hover {
  background: linear-gradient(90deg, #21cbf3 0%, #2196f3 100%);
}

.goal-id-actions {
  display: flex;
  gap: 1em;
  margin: 1.5em auto 2em auto;
  justify-content: center;
}
.goal-id-actions input {

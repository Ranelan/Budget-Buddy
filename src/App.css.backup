/* Footer */
.main-footer {
  background: var(--bg-secondary);
  color: var(--text-secondary);
  border-top: 1px solid var(--border);
  padding: 2em 0 1em 0;
  margin-top: 4em;
}

.footer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1em;
}

.footer-social {
  display: flex;
  gap: 1.5em;
  margin-top: 0.5em;
}

.footer-social a {
  color: var(--accent-primary);
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  padding: 0.5em;
  border-radius: 8px;
}

.footer-social a:hover {
  color: var(--warm-accent);
  background: var(--accent-light);
  transform: scale(1.1);
}


/* --- 404 Not Found Page --- */
.notfound-section {
  background: white;
  color: var(--accent-primary);
  border-radius: 18px;
  max-width: 500px;
  margin: 4em auto 2em auto;
  padding: 3em 2em 2.5em 2em;
  box-shadow: 0 4px 24px rgba(33,150,243,0.10);
  text-align: center;
}
.notfound-section h1 {
  font-size: 4em;
  margin-bottom: 0.2em;
  color: #21cbf3;
}
.notfound-section h2 {
  font-size: 2em;
  margin-bottom: 0.7em;
}
.notfound-section p {
  font-size: 1.1em;
  color: var(--text-main);
  margin-bottom: 1.5em;
}
.notfound-home-link {
  display: inline-block;
  background: var(--accent-primary);
  color: white;
  font-weight: 700;
  padding: 0.7em 2em;
  border-radius: 8px;
  text-decoration: none;
  font-size: 1.1em;
  transition: background 0.2s, color 0.2s;
}
.notfound-home-link:hover {
  background: #21cbf3;
  color: white;
}
/* --- Contact Form Validation --- */
.form-error {
  color: #ff4d4f;
  font-size: 0.98em;
  margin-top: -0.7em;
  margin-bottom: 0.7em;
  display: block;
  font-weight: 600;
  letter-spacing: 0.01em;
}
.form-success {
  color: #21cbf3;
  font-size: 1.05em;
  margin-top: 1em;
  display: block;
  font-weight: 600;
  text-align: center;
}
/* Sections */
.about-section,
.contact-section,
.testimonials-section {
  background: var(--bg-card);
  border-radius: 20px;
  max-width: 800px;
  margin: 3em auto;
  padding: 3em 2.5em;
  box-shadow: 0 4px 25px var(--shadow);
  border: 1px solid var(--border);
}

.about-section h2,
.contact-section h2,
.testimonials-section h2 {
  color: var(--accent-primary);
  font-size: 2.5em;
  margin-bottom: 1em;
  text-align: center;
  font-weight: 800;
}

.about-section p,
.contact-section p {
  font-size: 1.2em;
  line-height: 1.8;
  text-align: center;
  color: var(--text-secondary);
}

/* Contact Form */
.contact-form {
  display: flex;
  flex-direction: column;
  gap: 1.5em;
  max-width: 500px;
  margin: 0 auto;
}

.contact-form label {
  color: var(--accent-primary);
  font-weight: 700;
  font-size: 1.1em;
}

.contact-form input,
.contact-form textarea {
  background: var(--bg-main);
  color: var(--text-main);
  border: 2px solid var(--border);
  border-radius: 12px;
  padding: 1em 1.2em;
  font-size: 1em;
  outline: none;
  transition: all 0.3s ease;
  font-family: inherit;
}

.contact-form input:focus,
.contact-form textarea:focus {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px var(--accent-light);
}

.contact-form button {
  background: var(--gradient-primary);
  color: white;
  border: none;
  border-radius: 12px;
  padding: 1.2em 0;
  font-size: 1.2em;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
}

.contact-form button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px var(--shadow-lg);
}

/* Testimonials */
.testimonials-list {
  display: flex;
  flex-wrap: wrap;
  gap: 2em;
  justify-content: center;
}

.testimonial {
  background: var(--bg-main);
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 2em 1.5em;
  max-width: 280px;
  min-width: 220px;
  flex: 1 1 240px;
  transition: all 0.3s ease;
  position: relative;
}

.testimonial:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px var(--shadow-lg);
  border-color: var(--accent-primary);
}

.testimonial::before {
  content: '"';
  font-size: 4em;
  color: var(--accent-light);
  position: absolute;
  top: -10px;
  left: 15px;
  font-family: serif;
}

.testimonial-author {
  display: block;
  color: var(--accent-primary);
  font-weight: 700;
  margin-top: 1.5em;
  font-size: 1em;
}
